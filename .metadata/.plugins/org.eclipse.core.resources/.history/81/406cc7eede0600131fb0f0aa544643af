package map;

import java.awt.Point;
import java.awt.Rectangle;
import java.util.ArrayList;

import math.Util;

public class Dungeon
{
	// Parameters
	
	public static final int NUM_CELLS = 150;
	public static final int ROOM_DIM_MIN = 4;
	public static final int ROOM_DIM_MAX = 9;
	public static final int ROOM_RADIUS = (int)(NUM_CELLS / 20);
	
	public Dungeon()
	{
		
	}
	
	private void generate()
	{
		
	}
	
	private void generateRooms()
	{
		ArrayList<Rectangle> rooms =  new ArrayList<Rectangle>();
		Point currentPoint = new Point(0,0);
		
		for (int q = 0; q < NUM_CELLS; q++)
		{
			float theta = (float)(Math.random() * 2 * Math.PI);
			int x = Util.gaussian(ROOM_DIM_MIN, ROOM_DIM_MAX);
			int y = Util.gaussian(ROOM_DIM_MIN, ROOM_DIM_MAX);
		}
	}
}
